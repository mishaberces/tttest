<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="home.misha.testy.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_timer"
        android:textSize="@dimen/timerSize"
        android:layout_gravity="center_horizontal" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/max_rozmir_image">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView1"
            android:maxHeight="@dimen/max_rozmir_image"
            android:maxWidth="@dimen/max_rozmir_image"
            android:background="@drawable/finance_green"
            android:layout_weight="1"
            android:onClick="onclick" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:maxHeight="@dimen/max_rozmir_image"
            android:maxWidth="@dimen/max_rozmir_image"
            android:background="@drawable/news_red"
            android:layout_weight="1"
            android:onClick="onclick" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:maxHeight="@dimen/max_rozmir_image"
            android:maxWidth="@dimen/max_rozmir_image"
            android:background="@drawable/weather_blue"
            android:layout_weight="1"
            android:onClick="onclick" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:maxHeight="@dimen/max_rozmir_image"
            android:maxWidth="@dimen/max_rozmir_image"
            android:background="@drawable/sports_mauve"
            android:layout_weight="1"
            android:onClick="onclick" />
    </LinearLayout>

</LinearLayout>
